<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo" class="{{ uvlevelclass }}">
  <Page.actionBar>
    <ActionBar title="UV index" class="header">
      <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="goToMainPage" />
      <ActionItem tap="onRefresh" ios.systemIcon="13" ios.position="right" text="Refresh" android.position="actionBar"/>
    </ActionBar>
  </Page.actionBar> 
  <DockLayout width="100%" height="100%" class= "{{ uvlevelclass }}">
    <Label text="{{ uvlevel }}"></Label>
    <Label text="{{ uvindex }}"></Label>
  </DockLayout>
</Page>